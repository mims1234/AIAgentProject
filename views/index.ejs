<h1>AI Chat Application</h1>

<form id="chatForm">
  <select id="modelSelect">
    <% models.forEach(model => { %>
      <option value="<%= model.name %>"><%= model.name %> (<%= model.provider %>)</option>
    <% }); %>
  </select>
  
  <textarea id="messageInput" placeholder="Enter your message" rows="4"></textarea>
  
  <div class="slider-container">
    <label for="temperatureSlider">Temperature: <span id="temperatureValue">0.7</span></label>
    <input type="range" id="temperatureSlider" min="0" max="1" step="0.1" value="0.7">
  </div>
  
  <div class="slider-container">
    <label for="topPSlider">Top P: <span id="topPValue">1</span></label>
    <input type="range" id="topPSlider" min="0" max="1" step="0.1" value="1">
  </div>
  
  <button type="submit">Send</button>
</form>

<div id="chatOutput"></div>

<script src="/js/chat.js"></script>